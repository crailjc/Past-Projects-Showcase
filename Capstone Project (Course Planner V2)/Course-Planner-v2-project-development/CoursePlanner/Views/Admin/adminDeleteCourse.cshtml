@{
    ViewData["Title"] = "Delete Course";
}


<form id="myForm" onsubmit="return window.confirm('Are you sure you want to delete ' + $('#courseID option:selected').text() + '?')">
    <div class="container">
        <h2>Delete a Course</h2>
            
            <label for="courseID">Select Course:</label>
            <div class="form-select">
                <select name="courseID" id="courseID" class="form-control">
                @{
                    foreach (string[] c in ViewData["allcourses"] as List<string[]>)
                    {
                        @:<option value="@c[0]">@c[1]</option>
                    }
                }
                </select>
            </div>
        <button type="submit" class="btn btn-danger" style="margin-top: 10px;">Delete Course</button>

    </div>
</form>